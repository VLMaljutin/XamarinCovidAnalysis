<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Covid.ForForecast.Russia_Forecast.Infection_Russia_Forecast">
    <AbsoluteLayout>

        <Label x:Name="textLabel" Text="Введите кол-во дней" FontSize="20" TextColor="Aqua" Margin="55,0,0,0"/>
        <Entry x:Name="Number" BackgroundColor="yellow" WidthRequest="65" HeightRequest="50" FontSize="20" Margin="60,50,0,0"/>
        <Button x:Name="Tap" Text="Нажмите на кнопку" Clicked="Tap_Clicked" WidthRequest="120" Background="red" Margin="130,50,0,0"/>
        <Label x:Name="real" FontSize="20" TextColor="Aqua" Margin="100"/>
        <Label x:Name="result" FontSize="20" TextColor="Aqua" Margin="150"/>
        <Label x:Name="error" FontSize="20" TextColor="Aqua" Margin="200"/>
    </AbsoluteLayout>
</ContentPage>