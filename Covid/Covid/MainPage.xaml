<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Covid.MainPage"
             xmlns:local="clr-namespace:Covid;assembly=Covid"
             xmlns:windows="clr-namespace:Xamarin.Forms.PlatformConfiguration.WindowsSpecific;assembly=Xamarin.Forms.Core"
             windows:TabbedPage.HeaderIconsEnabled="true" 
            >
    <TabbedPage.Children>
        <NavigationPage Title="Главная страница" IconImageSource="main.png" >
            <x:Arguments>
                <local:Main/>
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="Про Covid-19" IconImageSource="about.jpg">
            <x:Arguments>
                <local:About/>
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="Статистика" IconImageSource="analysis.png">
            <x:Arguments>
                <local:Analysis/>
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="Прогнозирование">
            <x:Arguments>
                <local:Forecast/>
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
   
</TabbedPage>
