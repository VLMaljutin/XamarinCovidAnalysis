                            <x:String>Гемотест</x:String>
                            <x:String>Айболит</x:String>
                        </Picker.Items>
                    </Picker>
                    <Picker x:Name="picker2" Title="2) Пункты вакцинации" SelectedIndexChanged="picker2_SelectedIndexChanged" FontSize="Large">
                        <Picker.Items>
                            <x:String>ТЦ Парк Хаус (пр.Ямашева, 46/33</x:String>
